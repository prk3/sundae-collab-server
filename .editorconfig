root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

[*.{js,jsx,ts,tsx}]
indent_style = space
indent_size = 2

[*.{css,sass,scss,less}]
indent_style = space
indent_size = 2

[*.{xml,html,pug}]
indent_style = space
indent_size = 2

[*.{json,yaml,yml,toml}]
indent_style = space
indent_size = 2
